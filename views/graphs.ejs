      function showTime() {
        var i = 0;
        document.querySelectorAll("#dd p").forEach(d => {
          if (i === 0) {
            d.textContent = "Date: " + moment(Date.now()).format('Do-MM-YYYY');
            i = 1
          }
          else { d.textContent = "Time: " + moment(Date.now()).format('hh.mm.ss a'); i = 0; }
        });
      }
      setInterval(showTime, 1);
    </script>
